<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:padding="7dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_scripts"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_script_name"
        android:text="@string/script"
        android:layout_width="wrap_content"
        android:layout_below="@+id/img_scripts"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ln_day_in_week"
        android:layout_below="@+id/tv_script_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMonday"
            android:text="T2"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTuesday"
            android:text="T3"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvWednesday"
            android:text="T4"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvThursday"
            android:text="T5"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvFriday"
            android:text="T6"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSaturday"
            android:text="T7"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSunday"
            android:text="CN"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:text="00:00"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ln_day_in_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>